<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blackjack.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label alignment="CENTER" text="Pénz:" />
            <Label fx:id="ertek" text="0 Ft" />
            <Button mnemonicParsing="false" onAction="#join" text="Csatlakozás:" />
            <Label text="Ip:" />
            <TextField fx:id="server" />
            <Label text="Belépési érték:" />
            <TextField fx:id="belepes" />
            <Button mnemonicParsing="false" onAction="#onKilepclick" text="Kilép" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
      <Pane prefHeight="900.0" prefWidth="1600.0" style="-fx-border-color: black;">
         <children>
            <ImageView fitHeight="1000.0" fitWidth="1000.0" layoutX="300.0" layoutY="136.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@asztal.png" />
               </image>
            </ImageView>
         </children></Pane>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onHitclick" prefWidth="100.0" text="Hit" />
            <Button mnemonicParsing="false" onAction="#onStandclick" prefWidth="100.0" text="Stand" />
            <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#sendTet" text="Tét:" />
            <Label fx:id="tet" text="0 Ft" />
            <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Label onMouseClicked="#onEgyclick">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@chip1.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Label onMouseClicked="#on25click">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@chip25.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Label onMouseClicked="#on50click">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@chip50.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Label onMouseClicked="#on100click">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@chip100.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Label onMouseClicked="#onResetClick">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@remove.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
